{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": false,  // Zmień na false
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "declaration": true,  // Dodaj tę linię
    "emitDeclarationOnly": true,  // Dodaj tę linię
    "outDir": "lib/typescript"  // Dodaj tę linię
  },
  "include": [
    "src"  // Dodaj tę sekcję
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "lib"
  ]
}